{
	"compilerOptions": {
		"target": "ES2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"~/*": [
				"./*"
			]
		},
		"types": [
			"@types/google-one-tap",
			"@types/gtag.js",
			"user-agent-data-types"
		]
	},
	"include": [
		"svgr.d.ts",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/app/components/ModalGallery"
	],
	"exclude": [
		"node_modules"
	]
}